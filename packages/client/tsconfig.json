{
  "extends": "../../tsconfig.json",
  "exclude": [
    "vite.config.ts",
  ],
  "references": [
    { "path": "tsconfig.external.json" },
  ],
  "compilerOptions": {
    // Output
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    // Development
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext",
    ],

    // Alias
    "baseUrl": ".",
    "paths": {
      "@@/*": ["../*"],
      "@/*": ["./src/*"],
    },
  },
}
