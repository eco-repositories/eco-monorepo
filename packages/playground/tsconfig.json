{
  "extends": "../../tsconfig.json",
  "references": [
    { "path": "../shared/tsconfig.build.json" },
  ],
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,

    // Alias
    "baseUrl": ".",
    "paths": {
      "@@shared/*": [
        "../shared/dist/src/*",

        // FIXME: this is a workaround for tsc-alias's bug
        // https://github.com/justkey007/tsc-alias/issues/134
        // Remove this when the bug is fixed
        "../../shared/dist/src/*",
      ],
      "@/*": ["./src/*"],
    },
  },
}
